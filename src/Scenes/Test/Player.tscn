script/source = "extends KinematicBody2D


enum Animations {
	IDLE,
	WALK,
	RUN
}

enum Direction {
	LEFT,
	RIGHT,
	UP,
	DOWN
}

var Speed = 120
export(float) var Gravity = 9.8
export(float) var Jump = 0

var move = Vector2.ZERO

var anim = null

var current_anim = Animations.IDLE
var dir = Direction.RIGHT

func _ready():
	anim = $Animation
	

func _physics_process(delta):
	
	_move();
	print(current_anim)
	determine_position_and_animation_sprite(current_anim, dir, anim)
	
	move = move_and_slide(move, Vector2.UP, false, 4, 0.78, false)
	
	
func _move():
	
	move.y += Gravity
	
	if Input.is_action_pressed(\"left\"):
		move.x = -Speed
		anim.flip_h = true
		
		current_anim = Animations.WALK
		dir = Direction.LEFT
		
	elif Input.is_action_pressed(\"right\"):
		move.x = Speed
		anim.flip_h = false
		
		current_anim = Animations.WALK
		dir = Direction.RIGHT
		
	else:
		move.x = 0;
		current_anim = Animations.IDLE
		
		
	if is_on_floor():
		
		if Input.is_action_just_pressed(\"jump\"):
			move.y = -Jump
		elif Input.is_action_pressed(\"run\"):
			current_anim = Animations.RUN
			Speed = 180
			
	if Input.is_action_just_released(\"run\"):
		Speed = 120 

func determine_position_and_animation_sprite(cur_anim, cur_dir, sprite):
	
	if cur_anim == Animations.IDLE:
		
		sprite.play('Idle')
		
		if cur_dir == Direction.RIGHT:
			sprite.position.x = 6.5
		elif cur_dir == Direction.LEFT:
			sprite.position.x = -6.5
			
	elif cur_anim == Animations.RUN:
		
		sprite.play('Run')
		
		if cur_dir == Direction.RIGHT:
			sprite.position.x = -4
		elif cur_dir == Direction.LEFT:
			sprite.position.x = 4
	
	elif cur_anim == Animations.WALK:
		
		sprite.play('Walk')
		
		if cur_dir == Direction.RIGHT:
			sprite.position.x = 5.5
		elif cur_dir == Direction.LEFT:
			sprite.position.x = -5.5
	













